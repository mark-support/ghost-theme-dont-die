{{! This is the post loop - each post will be output using this markup }}
<div id="content">
{{#foreach posts}}

<article class="{{post_class}}">

  {{#if image}}

    <a class="featured-image" href="{{url}}" title="{{title}}">
      <img src="{{image}}" alt="{{title}}" />
    </a>

  {{else}}

    <a class="featured-image" href="{{url}}">
      {{content words="0"}}
    </a>

  {{/if}}

		<div class="post-wrapper">

		  <div class="inner post-inner">
        <ul class="meta top">
		      <li class="time">
			      <a href="{{url}}" title="Big Sur"><time class="post-date updated" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</a>
          </li>
        </ul>

  			<h2 class="post-title entry-title font-effect-anaglyph">
  				<a href="{{url}}">{{{title}}}</a>
  			</h2>

  		  <div class="excerpt">

        		  <p></p>

        	    <ul class="meta">
        		    <li class="author-meta post-tags">
                  
        		  </li>
        	  </ul>

            <p><a href="{{url}}" class="more-link">Now</a></p>
        </div><!-- /excerpt -->
  	</div><!-- / post-wrapper -->
  </div><!-- / inner.post-inner -->

<span class="star"></span>
</article>

{{/foreach}}
</div>

{{! Previous/next page links - displayed on every page }}
{{pagination}}
